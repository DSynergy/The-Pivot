<%= link_to "Back to Listings", listings_path, class: "btn btn-small"  %>
<h3 id="cart-title">Shopping Cart</h3>
<div id="cart">
  <% if !@cart_contents.empty? %>
    <table id="cart" class="table table-striped">
          <tr>
            <th>Item</th>
            <th>Quantity</th>
          </tr>
          <% @cart.listings_with_quantity.each do |listing, dates| %>
            <tr>
              <td><h4><%= listing.title %></h4></td>
              <td><%= dates %></td>
            </tr>
        <% end %>
        <tfoot>
          <td colspan="4">
            <%= button_to "Book Itinerary", user_bookings_path(current_slug), class: "btn", data: { confirm: "Proceed to Checkout?" } %>
          </td>
        </tfoot>
    </table>
  <% else %>
    <p> "There are no items in your cart" </p>
  <% end %>
</div>

<% if !current_user.nil? && current_user.admin? %>
  <%= link_to "Back to listings", admin_listings_path, class: "btn btn-small"  %>
<% else %>
  <%= link_to "Back to listings", listings_path, class: "btn  btn-small" %>
<% end %>

<section>
  <h1 id="listing-title"><%= @listing.title %></h1>
</section>

<section>
  <p id="listing-description"><%= @listing.description %></p>
  <p id="listing-price"><%= number_to_currency(@listing.price) %></p>
</section>






<% if @listing.retired %>
  <p id="retired-listing"><%= "#{@listing.name} has been retired from the listings" %></p>
<% elsif current_user.nil? || current_user.default? %>
  <%= button_to  'Add to Cart', cart_path(listing_id: @listing), class: "btn  btn-small active" %>
<% end %>

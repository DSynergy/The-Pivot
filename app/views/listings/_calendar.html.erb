<div class="form-group">
<%= form_for(:listing, url: cart_path) do |t| %>
  <div class="input-daterange">
    <h3>Select dates</h3>
    <%= t.text_field :start_date, class: "from_date form_control", id: "from-date", name: "listing[start_date]", contenteditable: "false" %>
    <%= t.text_field :end_date, class: "to_date form_control", id: "to-date", name: "listing[end_date]", contenteditable: "false" %>
  </div>

  <%= hidden_field_tag "listing_id", @listing.id %>

  <% if @listing.retired %>
    <p id="retired-listing"><%= "#{@listing.name} has been retired from the listings" %></p>
  <% elsif current_user.nil? || !current_user.admin? %>
    <%= button_to 'Add to Itinerary', cart_path, class: "btn" %>
  <% end %>
<% end %>
</div>

<h3>Add Item to <%= @category.name %></h3>
<%= form_for([:admin, @listing_category]) do |f| %>
  <%= f.label "Item" %>
  <%= f.select(:listing_id, @listing_options, {}, { :class => "btn btn-info btn-lg left"}) %>
  <%= f.hidden_field :category_id, value: params[:category_id] %>
  <%= f.submit "Submit" %>
<% end %>
